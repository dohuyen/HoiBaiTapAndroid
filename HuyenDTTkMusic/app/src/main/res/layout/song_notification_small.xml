<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notifiAlbumImageIV"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="24dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifiAppNameTV"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/notifiAlbumImageIV">

        <ImageButton
            android:layout_weight="1"
            android:layout_marginStart="80dp"
            android:id="@+id/notifiSkipPreviousIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_skip_previous" />

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/notifiPauseIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pause" />

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/notifiSkipNextIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:src="@drawable/ic_skip_next"/>

    </LinearLayout>
</RelativeLayout>